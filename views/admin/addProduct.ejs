<body>    

<div>
  <section class="" style="margin-top: 60px;">
    <!-- Jumbotron -->
    <div class="px-4 py-5 px-md-5  text-lg-start">
        
      <div class="container">
        <!-- <div class="row gx-lg-5 align-items-center"> -->
            <div class="row gx-lg-5 align-items-center">
                <!-- <div class="col-md-9 col-lg-6 col-xl-5">
                    <img src="/images/shoppingpic.svg"
                      class="img-fluid" alt="Sample image">
                  </div> -->

          
  
          <div class="col-lg-6 mx-auto">
            <div class="card mx-auto" style="
            width: 600px;
            /* text-align: center; */
            background: hsla(0, 0%, 100%, 0.8);
            backdrop-filter: blur(300px);
            /* margin-top: 70px; */
            ">
                  <h2 style="text-align: center;">Add Product</h2>

              <div class="card-body py-2 px-7 px-md-5 mb-5">
                <form action="/submit_product" method="POST" >
                  <!-- 2 column grid layout with text inputs for the first and last names -->
                  <div class="col-12">
                    <div class="form-outline mb-2">
                      <label class="form-label" for="form3Example1">Product Name</label>
                      <!-- <div class="fname"> -->
                      <input type="text" name="product_name" id="form3Example1" class="form-control" />
                      <!-- <%- include('./../partials/errorMessage.ejs', {errorMessage : errorObj?.fName }) %> -->
                      <!-- </div> -->
                      <%- include('./../partials/errorMessage.ejs', {errorMessage : errorObj?.product_name }) %>

                    </div>
                  </div>
                    <div class="col-12">
                      <div class="form-outline mb-2">
                        <label class="form-label" for="form3Example2">Price</label><br>
                        <input type="number" id="price" name="price" min="0" step="0.01" class="form-control" >
                      </div>
                      <%- include('./../partials/errorMessage.ejs', {errorMessage : errorObj?.price }) %>

                    </div>
  
<div class="col-12">  
  <div class="form-outline mb-2">
    <label for="exampleFormControlTextarea1" class="form-label">Description</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" name="description" rows="3"></textarea>
  </div>
  <%- include('./../partials/errorMessage.ejs', {errorMessage : errorObj?.description }) %>

</div>
<!--                     
                  <div class="form-outline mb-2">
                    <label class="form-label" for="form3Example3">Description</label>
                    <textarea class="desc-input" id="description" name="description" rows="4" required></textarea>
                  </div> -->
                  <div class="col-12">  
                  <div class="form-outline mb-2">
                    <label  class="form-label"  for="imgUrl">Image Link</label>
                    <br>
                    <input type="text" id="img_url" name="img_url" class="form-control" >
                  </div>
                  <%- include('./../partials/errorMessage.ejs', {errorMessage : errorObj?.img_url }) %>

                  </div>

                  <div class="col-12">
                    <div class="form-outline mb-4" >
                        <label class="form-label" for="validationServer04" class="form-control">Category</label>
                        <div class="dropdown">
                      <select class="form-select" name="category"  >
                        <option selected ></option>
                        <option value="men">Men</option>
                        <option value="women">Women</option>
                        <option value="kids">Kids</option>
                        <option value="laptop">Laptop</option>
                        <option value="phone">Phone</option>
                        <option value="tv">TV</option>
                        <option value="makeup">MakeUp</option>
                        <option value="skincare">Skin Care</option>
                        <option value="hair">Hair Care</option>
                        <option value="perfume">Perfumes</option>
                      </select>
                      </div>
                      <!-- <div id="validationServer04Feedback" class="invalid-feedback">
                        Please select a valid state.
                      </div> -->
                      <%- include('./../partials/errorMessage.ejs', {errorMessage : errorObj?.category }) %>

                    </div>

                  </div>
  
                    <!-- Submit button -->
                    <div class="text-center">
                      <%- include('./../partials/errorBlock.ejs', {errorBlockMessage : errorObj?.errorBlockMessage }) %>
                      <button type="submit" class="btn btn-primary btn-block mb-4">
                        Submit
                      </button>
                    </div>
                  <!-- Register buttons -->
                  </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Jumbotron -->
  </section>

</div>

