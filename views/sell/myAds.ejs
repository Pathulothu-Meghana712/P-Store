  <style>

  body {

    margin-top: 70px;

  }

 

   /* Bootstrap resets */

  .card {

    border: none;

  }

  .card-img {

    border-radius: 0;

    object-fit: cover;

  }

 

  .vgr-cards {

    .card {

      display: flex;

      flex-flow: wrap;

      flex: 100%;

      margin-bottom: 40px;

 

      &:nth-child(even) .card-img-body {

        order: 2;

      }

 

      &:nth-child(even) .card-body {

        padding-left: 0;

        padding-right: 1.25rem;

      }

     

      @media (max-width: 576px) {

        display: block;

      }

     

    }

 

    .card-img-body {

      flex: 1;

      overflow: hidden;

      position: relative;

     

      @media (max-width: 576px) {

        width: 100%;

        height: 200px;

            margin-bottom: 20px;

      }

     

    }

   

    .card-img {

      width: 200px;

      height: 200px;

      position: relative;

      margin-left: 50%;

      transform: translateX(-50%);

      object-fit:fill;

     

      @media (max-width: 1140px) {

            margin: 0;

      transform: none;

      width: 100%;

      height: auto;

      }

     

    }

 

    .card-body {

      flex: 2;

      padding: 0 0 0 1.25rem;

     

      @media (max-width: 576px) {

        padding: 0;

      }

     

    }

  }

  .cont {

    border: 1px solid #ccc; /* Add a light gray border */

    padding: 10px; /* Add some padding for spacing */

    margin-bottom: 20px; 

  }

  a{

    text-decoration: none;

    color: black;

  }

 

  div.p {

  white-space: nowrap;

  overflow: hidden;

  text-overflow: ellipsis;

}

 

   

</style>

 

 

 

 

<div style="margin-top: 100px;"> 

  <% myAds.forEach(product => { %>

      <div class="container cont" >

        <div class="card-group vgr-cards">

          <div class="card">

            <div class="card-img-body">

              <a href="/viewProduct?p_id=<%= product._id %>">

                <img class="card-img" src="<%= product.img %>" alt="<%= product.product_name %> Image">

              </a>

            </div>

            <div class="card-body">

              <a href="/viewProduct?p_id=<%= product._id %>">

                <h4 class="card-title"><%= product.product_name %></h4>

              </a>

              <div class="card-text-container">

                <%= product.description.length > 100 ? product.description.slice(0, 100) + '...' : product.description %>              </div>
<br>
              <h6 class="card-title" >Price : â‚¹ <%= product.price %></h6>
<br>  
            <a href="./../sell/updateProduct?p_id=<%= product._id %>" class="btn btn-success">
                <i class="fa fa-pencil" ></i>Edit
            </a>




              <a href="/deletemyAdsProduct?p_id=<%= product._id %>" class="btn btn-danger">REMOVE</a>

            </div>

          </div>

        </div>

      </div>

      <br>

    <% }); %>

  </div>

 

