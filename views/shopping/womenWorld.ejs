<style>
    /* Style the add to cart section */
    .add-to-cart {
        margin-top: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .quantity-input {
        display: flex;
        align-items: center;
        margin-top: 10px;
        justify-content: center;
    }

    .quantity-input button {
        background-color: #333;
        color: #fff;
        border: none;
        font-size: 16px;
        cursor: pointer;
    }

    .quantity-input input {
        width: 40px;
        text-align: center;
        font-size: 16px;
        border: 1px solid #ddd;
        margin: 0 5px;
        padding: 5px;
    }
</style>

