<body>
        <div class="row gx-lg-5 align-items-center">
          <h3 style="text-align: center;"><b>Reset Password</b></h3>
          <div class="col-lg-6 mb-5 mx-auto">
            <div class="card shadow-lg mx-auto" style="
            width: 600px;
            /* text-align: center; */
            background: hsla(0, 0%, 100%, 0.8);
            backdrop-filter: blur(300px);
            margin-top: 40px;
            ">
              <div class="card-body py-5 px-md-5">
                <form action="/resetPassword/<%= token %>" method="POST">
                  
                  <!-- Email input -->
                  <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example3">New password</label>
                    <input type="password" name="password" id="password" class="form-control"  class="<%= errorObj?.password && 'formError' %>" value="<%= oldData.password%>" placeholder="Enter password">
                    <%- include('./../partials/errorMessage.ejs', {errorMessage : errorObj?.password }) %> 
                  </div>
    
                  <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example3">Confirm new password</label>
                    <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" class="<%= errorObj?.confirmPassword && 'formError' %>" value="<%= oldData.confirmPassword%>" placeholder="Confirm Password">
                    <%- include('./../partials/errorMessage.ejs', {errorMessage : errorObj?.confirmPassword }) %>
                  </div>
    
                  <div class="text-center">
                    <%- include('./../partials/errorBlock.ejs', {errorBlockMessage : errorObj?.errorBlockMessage }) %>
                    <button type="submit" class="btn btn-primary btn-block mb-4">
                      Reset
                    </button>
                  </div>
                </form>
                  </div>
               
              </div>
            </div>
          </div>
    </body>
